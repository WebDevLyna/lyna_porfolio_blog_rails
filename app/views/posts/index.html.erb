<h1 id="page_title">Stuff I've Written</h1>

<div id="blog_background" class="wrapper wrapper_padding clearfix">
  <div class="wrapper wrapper_padding clearfix">
    <div id="welcome_panel">
      <div id="posts_wrapper" class="skinny_wrapper">
      <% @posts.each do |post| %>
        <div class="post">
        <p class="date"><%= post.created_at.strftime('%A, %B %d, %Y') %></p>
          <h2><a href="#"><%= link_to post.title, post %></a></h2>
        <hr>
        </div>
      <% end %>
      </div>
    </div>
  </div>
</div>

  <!-- render page links in the view: -->
  <%= will_paginate @posts %>
